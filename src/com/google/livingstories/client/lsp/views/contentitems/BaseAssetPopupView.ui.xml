<!-- 
  Basic rendering for an asset popup.
-->

<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
  <ui:style>
    .caption {
      text-align: left;
      color: #666;
      font-size: 16px;
    }
  </ui:style>
  <g:HTMLPanel>
    <table width="400">
      <caption ui:field="caption" class="{style.caption}"/>
      <tr>
        <td>
          <g:SimplePanel ui:field="content"/>
        </td>
      </tr>
      <tr>
        <td>
          <g:SimplePanel ui:field="byline"/>
        </td>
      </tr>
    </table>
  </g:HTMLPanel>
</ui:UiBinder> 