<!-- 
  Encapsulates the content of the share popup.
-->
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
    ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
    ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
    ui:generateLocales="default">
  <ui:style>
    .popup {
      padding: 3px;
      margin-left: -4px;
    }
  </ui:style>
  <g:FlowPanel styleName="{style.popup}">
    <g:Label>
      <ui:msg description="Instructions on what to do with the link text">Paste link in email or IM</ui:msg>
    </g:Label>
    <g:TextBox ui:field="shareBox"/>
  </g:FlowPanel>
</ui:UiBinder> 