<!-- 
  Renders a slideshow preview.  This is just a preview image with a 'Slideshow' header, with no caption.
-->

<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:lsp="urn:import:com.google.livingstories.client.lsp.views.contentitems"
    ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
    ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
    ui:generateLocales="default">
  <ui:with field="res" type="com.google.livingstories.client.lsp.views.Resources" />
  <g:HTMLPanel>
    <g:Label ui:field="header" styleName="{res.css.contentItemHeader}">
      <ui:msg description="Title for a slideshow widget">Slideshow</ui:msg>
    </g:Label>
    <g:FocusPanel ui:field="previewImage"/>
  </g:HTMLPanel>
</ui:UiBinder>
