<!-- 
  Renders a date range.
-->

<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
  <ui:style>
    .date {
      color: #777;
    }
    .time {
      color: #999;
      font-size: 10px;
      display: none;
    }
  </ui:style>
  <g:FlowPanel>
    <g:Label ui:field="date" styleName="date"/>
    <g:Label ui:field="time" styleName="time"/>
  </g:FlowPanel>
</ui:UiBinder>
